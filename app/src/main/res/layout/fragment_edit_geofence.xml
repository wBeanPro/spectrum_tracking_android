<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.EditGeofenceFragment">

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/ll_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:visibility="gone">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/dimen_8"
                android:src="@drawable/ic_navigate_before_white"
                android:tint="@color/darkGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/geofence"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/font_15"
                android:textStyle="bold" />
        </RelativeLayout>
        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_top_bar"
            android:layout_alignParentBottom="true"
            mapbox:mapbox_cameraTargetLat="40.73581"
            mapbox:mapbox_cameraTargetLng="-73.99155"
            mapbox:mapbox_cameraZoom="11">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:orientation="vertical">
                </LinearLayout>

            </LinearLayout>
        </com.mapbox.mapboxsdk.maps.MapView>

        <LinearLayout
            android:id="@+id/ll_geofence_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/bg_round_white_with_opacity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="@dimen/dimen_15">
                <Spinner
                    android:id="@+id/spinner_fence_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    />

                <Spinner
                    android:id="@+id/spinner_vehicle_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edit_fence_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:hint="@string/fence_name"
                    android:singleLine="true"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/dateTextColor"
                    android:textSize="@dimen/dimen_12"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_polygon_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_25"
                android:layout_marginHorizontal="@dimen/dimen_15"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="@string/double_click_to_finish_drawing"
                android:textSize="@dimen/dimen_10"
                android:textColor="#f00"
                android:background="@android:color/transparent"
                android:visibility="visible"
                />

            <LinearLayout
                android:id="@+id/ll_draw_type_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_type_circle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:text="@string/circle"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/roundedbutton_blue1"
                    />
                <TextView
                    android:id="@+id/btn_type_polygon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:text="@string/polygon"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/roundedbutton_blue1"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_clear"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:text="@string/clear"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/roundedbutton_gray1"
                    />
                <TextView
                    android:id="@+id/btn_add_new_fence"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:text="@string/save"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/roundedbutton_blue1"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>