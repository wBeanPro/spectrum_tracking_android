<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#dddddd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginHorizontal="@dimen/dimen_15"
        android:text="Battery Optimization"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_15"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_10"
        android:background="@drawable/roundedbutton_white">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:src="@drawable/ic_battery_opt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_10"
        android:layout_marginVertical="@dimen/dimen_4"
        android:background="@drawable/roundedbutton_white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:text="@string/we_recommend_to_turn_off_batter_optimization_for_spectrum_tracking_app_if_you_track_your_phone"
            android:textSize="@dimen/dimen_12"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginBottom="@dimen/dimen_15"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_disable_optimization"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginVertical="@dimen/dimen_5"
                android:text="@string/disable_battery_optimization"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_10"
                android:gravity="center"
                android:background="@drawable/roundedbutton_blue1"/>
            <TextView
                android:id="@+id/btn_show_me_how"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginVertical="@dimen/dimen_5"
                android:text="@string/show_me_how"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_10"
                android:gravity="center"
                android:background="@drawable/roundedbutton_green1"/>
            <TextView
                android:id="@+id/btn_skip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginVertical="@dimen/dimen_5"
                android:text="@string/skip"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_10"
                android:gravity="center"
                android:background="@drawable/roundedbutton_red1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>