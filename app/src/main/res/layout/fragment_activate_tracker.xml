<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeeee"
    android:orientation="vertical"
    tools:context="com.jo.spectrumtracking.fragment.ActivateTrackerFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/spectrum"
                android:visibility="gone" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_10"
                android:maxLines="25"
                android:text="TextView"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_5"
                android:orientation="vertical"
                android:padding="@dimen/dimen_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tacker_id"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_tracker_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_3"
                            android:background="@drawable/bg_text_box"
                            android:paddingLeft="@dimen/dimen_5"
                            android:paddingTop="@dimen/dimen_5"
                            android:paddingBottom="@dimen/dimen_5"
                            android:singleLine="true"
                            android:textSize="@dimen/font_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/plate_number"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_plate_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_3"
                            android:background="@drawable/bg_text_box"
                            android:paddingLeft="@dimen/dimen_5"
                            android:paddingTop="@dimen/dimen_5"
                            android:paddingBottom="@dimen/dimen_5"
                            android:singleLine="true"
                            android:textSize="@dimen/font_10" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driver_name"
                            android:textColor="@color/table_header_text_color"

                            android:textSize="16sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_driver_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_3"
                            android:background="@drawable/bg_text_box"
                            android:paddingLeft="@dimen/dimen_5"
                            android:paddingTop="@dimen/dimen_5"
                            android:paddingBottom="@dimen/dimen_5"
                            android:singleLine="true"
                            android:textSize="@dimen/font_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_category"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen_3"
                            android:layout_marginBottom="@dimen/dimen_5"
                            android:background="@drawable/bg_text_box"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dimen_3"
                            android:paddingTop="5dp"
                            android:paddingBottom="@dimen/dimen_4">

                            <Spinner
                                android:id="@+id/spinner_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:layout_marginBottom="@dimen/dimen_3"
                    android:text="@string/tracking_plan"
                    android:textColor="@color/table_header_text_color"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text_box"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_info"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle_info" />

                    <Spinner
                        android:id="@+id/spinner_dataplan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_marginBottom="@dimen/dimen_5"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:text="@string/wifi_plan"
                    android:textColor="@color/table_header_text_color"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:background="@drawable/bg_text_box"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_3"
                    android:paddingTop="5dp"
                    android:paddingBottom="@dimen/dimen_4">

                    <Spinner
                        android:id="@+id/spinner_wifiplan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:text="@string/auto_renew"
                    android:textColor="@color/table_header_text_color"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:background="@drawable/bg_text_box"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_3"
                    android:paddingTop="5dp"
                    android:paddingBottom="@dimen/dimen_4">

                    <Spinner
                        android:id="@+id/spinner_autorenew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </LinearLayout>


                <TextView
                    android:id="@+id/lbl_billing_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_2"
                    android:text="Billing Information"
                    android:textColor="#0e2c51"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_5">

                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/billing_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:textSize="16sp"
                        card_view:activeBgColor="@android:color/holo_blue_dark"
                        card_view:activeTextColor="@android:color/white"
                        card_view:cornerRadius="15dp"
                        card_view:inactiveBgColor="@color/btn_disabled"
                        card_view:inactiveTextColor="@android:color/black"
                        card_view:separatorColor="@color/gray_very_light"
                        card_view:textToggleLeft="Use saved card"
                        card_view:textToggleRight="Add a new card"
                        card_view:toggleWidth="@dimen/dimen_110" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/billing_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_on_card"
                        android:textColor="@color/table_header_text_color"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/edit_card_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:layout_marginBottom="@dimen/dimen_2"
                        android:background="@drawable/bg_text_box"
                        android:paddingLeft="@dimen/dimen_3"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_5"
                        android:singleLine="true"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/street_address_lowercase"
                        android:textColor="@color/table_header_text_color"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/edit_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:layout_marginBottom="@dimen/dimen_2"
                        android:background="@drawable/bg_text_box"
                        android:paddingLeft="@dimen/dimen_3"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_5"
                        android:singleLine="true"
                        android:textSize="@dimen/font_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/city_lowercase"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="16sp"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/edit_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3"
                                android:layout_marginBottom="@dimen/dimen_2"
                                android:background="@drawable/bg_text_box"
                                android:paddingLeft="@dimen/dimen_3"
                                android:paddingTop="@dimen/dimen_5"
                                android:paddingBottom="@dimen/dimen_5"
                                android:singleLine="true"
                                android:textSize="@dimen/font_10" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/state_lowercase"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="16sp"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/edit_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3"
                                android:layout_marginBottom="@dimen/dimen_2"
                                android:background="@drawable/bg_text_box"
                                android:paddingLeft="@dimen/dimen_3"
                                android:paddingTop="@dimen/dimen_5"
                                android:paddingBottom="@dimen/dimen_5"
                                android:singleLine="true"
                                android:textSize="@dimen/font_10" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/zip_code"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="16sp"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/edit_zip_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3"
                                android:layout_marginBottom="@dimen/dimen_2"
                                android:background="@drawable/bg_text_box"
                                android:inputType="number"
                                android:paddingLeft="@dimen/dimen_3"
                                android:paddingTop="@dimen/dimen_5"
                                android:paddingBottom="@dimen/dimen_5"
                                android:singleLine="true"
                                android:textSize="@dimen/font_10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimen_3"
                                android:text="@string/country"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="16sp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_text_box"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/spinner_country"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_3"
                                    android:layout_marginBottom="@dimen/dimen_5"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_number"
                        android:textColor="@color/table_header_text_color"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/edit_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:layout_marginBottom="@dimen/dimen_2"
                        android:background="@drawable/bg_text_box"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dimen_3"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_5"
                        android:singleLine="true"
                        android:textSize="@dimen/font_10" />

                </LinearLayout>

                <TextView
                    android:id="@+id/lbl_last_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_3"
                    android:text="@string/lbl_last_digits"
                    android:textColor="@color/table_header_text_color"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_last_digits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text_box"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dimen_3"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_5"
                    android:singleLine="true"
                    android:textSize="@dimen/font_10"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_card_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_expiry"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_card_expiry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_3"
                            android:layout_marginBottom="@dimen/dimen_2"
                            android:background="@drawable/bg_text_box"
                            android:hint="@string/lbl_mmyy"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dimen_3"
                            android:paddingTop="@dimen/dimen_5"
                            android:paddingBottom="@dimen/dimen_5"
                            android:singleLine="true"
                            android:textSize="@dimen/font_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cv_code"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_card_cvcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_3"
                            android:layout_marginBottom="@dimen/dimen_2"
                            android:background="@drawable/bg_text_box"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dimen_3"
                            android:paddingTop="@dimen/dimen_5"
                            android:paddingBottom="@dimen/dimen_5"
                            android:singleLine="true"
                            android:textSize="@dimen/font_10" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <soup.neumorphism.NeumorphButton
                        android:id="@+id/btn_activate"
                        style="@style/Widget.Neumorph.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dimen_40"
                        android:paddingRight="@dimen/dimen_40"
                        android:text="@string/activate"
                        android:textColor="@color/table_header_text_color" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
